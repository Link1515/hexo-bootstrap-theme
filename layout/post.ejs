<div class="post">
  <% if (page.cover) { %>
  <div class="text-center mb-4">
    <img
      class="img-fluid rounded"
      width="1200"
      height="630"
      src="<%= page.cover %>"
      alt="cover"
    />
  </div>
  <% } %>

  <h1><%= page.title %></h1>

  <hr />

  <div class="d-flex flex-column gap-1 mb-4">
    <% if (page.categories.length > 0) { %>
    <div>
      <%- partial('partials/categories', { categories: page.categories }) %>
    </div>
    <% } %> <% if (page.tags.length > 0) { %>
    <div><%- partial('partials/tags', { tags: page.tags }) %></div>
    <% } %>
  </div>

  <div class="post-content"><%- page.content %></div>
</div>

<style>
  .post .post-content h2::after {
    content: '';
    display: block;
    height: 1px;
    margin-top: 6px;
    margin-bottom: 18px;
    color: inherit;
    border: 0;
    border-top: var(--bs-border-width) solid;
    opacity: 0.25;
  }

  .post .post-content img {
    max-width: 100%;
    display: block;
    margin: auto;
    padding: 1.5rem 0;
  }
</style>
