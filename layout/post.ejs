<div class="post">
  <h1><%= page.title %></h1>
  <small class="text-body-secondary">
    <time datetime="<%= page.date.toISOString() %>">
      <%= page.date.format('YYYY-MM-DD') %>
    </time>
  </small>
  <hr />

  <div class="d-flex flex-column gap-2 mb-4">
    <% if (page.categories.length > 0) { %>
    <div>
      <%- partial('partials/categoryLinks', { categories: page.categories }) %>
    </div>
    <% } %> 

    <% if (page.tags.length > 0) { %>
    <div>
      <%- partial('partials/tagLinks', { tags: page.tags }) %>
    </div>
    <% } %>
  </div>

  <% if (theme.post.show_cover && page.cover) { %>
  <div class="text-center mb-4">
    <img
      class="img-fluid rounded"
      width="1200"
      height="630"
      src="<%= url_or_path(page.cover) %>"
      alt="cover"
    />
  </div>
  <% } %>

  <% if (theme.post.show_description) { %>
    <p class="description mb-5"><%= page.description %></p>
  <% } %>

  <div id="tableOfContents" class="tableOfContents d-flex flex-column gap-1 align-items-start border px-4 py-3">
    <h4><%= __('tableOfContents') %></h4>
  </div>

  <div class="content">
    <%- page.content %>
  </div>
</div>

<script src="<%= url_for('js/partials/post.js') %>"></script>